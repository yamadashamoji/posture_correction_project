<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.InputController">
    <VBox spacing="10.0" alignment="TOP_LEFT" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        
        <Label text="姿勢の自己評価（1〜5）" />
        <Slider fx:id="ratingSlider" min="1" max="5" value="3" majorTickUnit="1" minorTickCount="0" snapToTicks="true" showTickMarks="true" showTickLabels="true" />
        
        <Label text="今日の姿勢に関するメモ" />
        <TextArea fx:id="commentArea" promptText="肩が丸まっていた気がする…など自由に記入" prefRowCount="4"/>

        <HBox spacing="10">
            <Button text="保存" onAction="#handleSave"/>
            <Button text="リセット" onAction="#handleReset"/>
        </HBox>

        <Label fx:id="statusLabel" textFill="green" />
    </VBox>
</AnchorPane>
